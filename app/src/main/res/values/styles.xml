<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurple</item>
        <item name="colorPrimaryDark">@color/colorPurpleDark</item>
        <item name="colorAccent">#7C4DFF</item>
    </style>

    <style name="dateTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="PrimaryFontStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/mainFontColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- details task dialog style-->
    <style name="fit_screen_dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert" />
    <!--    adding task dialog style-->
    <style name="full_screen_dialog" parent="Theme.MaterialComponents.Light.DialogWhenLarge" />

    <style name="mine" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:padding">8dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipIconVisible">true</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="chipIconTint">#9991AD</item>
        <item name="android:textColor">@color/mainFontColor</item>
    </style>


</resources>